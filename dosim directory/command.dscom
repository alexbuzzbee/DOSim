#! /bin/bash

keeprunning="true"

function execCommand()
{
case $1 in
dir)
ls -la $2
;;
cd)
cd $2
;;
mkdir)
mkdir $2
;;
type)
cat $2
;;
exit)
keeprunning="false"
*)
esac
}

function main()
{
local cmd=""
source ./config.dssys
source ./autoexec.dsbat
while [ $keeprunning = "true" ]; do
echo -n $PWD
echo -n ">"
read cmd
execCommand $cmd
done
exit 0
}

main

